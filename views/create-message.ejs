<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create message</title>
</head>
<body>
    <div class="createMsg">
        <h3>Create message</h3>

        <!-- Errors -->
        <% if(typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul style="color: red; list-style-type: none; padding: 0;">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>

        <!-- Create form -->
        <form action="/create-message" method="post" class="createMsgForm">
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" placeholder="Post title" required value="<%= typeof message_data !== 'undefined' ? message_data.title : '' %>"><br><br>

            <label for="text_content">Content:</label>
            <textarea name="text_content" id="text_content" rows="10" cols="50" placeholder="Type your message...">
                <%= typeof message_data !== 'undefined' ? message_data.text_content : '' %>
            </textarea><br><br>

            <button type="submit">Post</button>
        </form>

        <p><a href="/">Back to Home</a></p>
    </div>
</body>
</html>