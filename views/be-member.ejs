<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Echo | <%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="beMemberDiv">
        <h1>Join the club!</h1>
        <p>Become a member to access membership priviliges</p>

        <!-- Errors -->
        <% if(typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul class="member-admin-form">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>

        <!-- Form -->
        <form action="/be-member" method="post" class="beMemberForm">
            <label for="passcode">Secret passcode:</label>
            <input type="password" name="passcode" id="passcode" required>

            <button type="submit">Unlock Membership</button>
        </form>

        <p><a href="/">Back to Home</a></p>
    </main>

    <%- include('partials/footer') %>
</body>
</html>